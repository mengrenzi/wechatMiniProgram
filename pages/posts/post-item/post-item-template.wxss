.swiper-image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 150rpx;
  left: 25rpx;
}

.swiper-date {
  font-family: fantasy, Microsoft YaHei;
  font-weight: 500;
  font-size: 12px;
}

.swiper-title {
  font-family: Microsoft YaHei;
  font-weight: bold;
  font-size: 17px;
  color:#fff;
}

.swiper-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 0;
  vertical-align: middle;
}

.swiper-author {
  margin-left: 10rpx;
  color: #fff;
  opacity: 0.65;
}

.post-container {
  flex-direction: column;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 10px;
  vertical-align: middle;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-date {
  font-size: 26rpx;
  margin-bottom: 10px;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
